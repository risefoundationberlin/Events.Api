networks:
  event-management-dev:
    driver: bridge
services:
  events.api:
    build:
      context: C:\solutions\rise\event-management\event-managment
      dockerfile: Events.Api/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Events.Api
      target: base
    container_name: Events.Api
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ASPNETCORE_URLS: https://+:443;http://+:80
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: ''
    image: eventsapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages  "/app/bin/Debug/net6.0/Events.Api.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    networks:
      event-management-dev: {}
    ports:
    - target: 80
    - target: 443
    tty: true
    volumes:
    - C:\solutions\rise\event-management\event-managment\Events.Api:/app:rw
    - C:\Users\piyush.sardana\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\piyush.sardana\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\piyush.sardana\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Users\piyush.sardana\.nuget\packages:/root/.nuget/packages:ro
    - C:\solutions\rise\event-management\event-managment:/src:rw
  postgres_image:
    environment:
      POSTGRES_DB: event_management
      POSTGRES_PASSWORD: admin
      POSTGRES_USER: postgres
    image: postgres:latest
    networks:
      event-management-dev: {}
    ports:
    - target: 5432
    restart: always
    volumes:
    - C:\solutions\rise\event-management\event-managment\.dbscripts\seed.sql:/docker-entrypoint-initdb.d/seed.sql:rw
    - db_volume:/var/lib/postgresql/data:rw
version: '3.4'
volumes:
  db_volume: {}