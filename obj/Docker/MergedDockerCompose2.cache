networks:
  event-management-dev:
    driver: bridge
services:
  events.api:
    build:
      context: C:\solutions\rise\event-management\event-managment
      dockerfile: Events.Api/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: eventsapi
    networks:
      event-management-dev: {}
    ports:
    - target: 80
    - target: 443
    volumes:
    - C:\Users\piyush.sardana\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\piyush.sardana\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  postgres_image:
    environment:
      POSTGRES_DB: event_management
      POSTGRES_PASSWORD: admin
      POSTGRES_USER: postgres
    image: postgres:latest
    networks:
      event-management-dev: {}
    ports:
    - target: 5432
    restart: always
    volumes:
    - C:\solutions\rise\event-management\event-managment\.dbscripts\seed.sql:/docker-entrypoint-initdb.d/seed.sql:rw
    - db_volume:/var/lib/postgresql/data:rw
version: '3.4'
volumes:
  db_volume: {}